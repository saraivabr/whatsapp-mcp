# Anthropic API Key (required)
ANTHROPIC_API_KEY=your_api_key_here

# Claude Model (optional, defaults to claude-sonnet-4-20250514)
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# WhatsApp Bridge URLs (optional, defaults shown)
WHATSAPP_BRIDGE_URL=http://localhost:8080
WHATSAPP_BRIDGE_WS_URL=ws://localhost:8080

# MCP Server Configuration (optional, defaults shown)
MCP_SERVER_COMMAND=uv
MCP_SERVER_ARGS=["run", "main.py"]
MCP_SERVER_CWD=../whatsapp-mcp-server

# Server Configuration (optional)
HOST=0.0.0.0
PORT=8000
